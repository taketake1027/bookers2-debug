  <div class="form-group mb-3">
    <%= form.label :name, "グループ名", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :introduction, "紹介文", class: "form-label" %>
    <%= form.text_area :introduction, class: "form-control", rows: 4, style: "resize: none;" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :image, "グループ画像", class: "form-label" %>
  </div>

  <div class="form-group mb-3">
    <%= form.file_field :image, id: "group_image" %>
  </div>
