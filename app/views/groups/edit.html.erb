<div class="container d-flex justify-content-center align-items-start mt-5">
  <div class="col-md-6">
    <h1 class="text-center">Editing Group</h1>

    <!-- form_with を使用して form を定義 -->
    <%= form_with model: @group, local: true, html: { multipart: true } do |form| %>
      <%= render 'form', form: form %>

      <!-- Submitボタンを親テンプレートに追加 -->
      <div class="mt-3">
        <%= form.submit "Update Group", class: "btn btn-info" %>
      </div>
    <% end %> <!-- form_with終了 -->
  </div>
</div>
