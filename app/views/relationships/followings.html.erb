<h1>Follow Users</h1>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '100x100' %></td>
        <td><%= link_to user.name, user_path(user) %></td>
        <td>フォロワー数<%= user.followings.count %></td>
        <td>フォロワー数<%= user.followers.count %></td>
        <td><%= link_to 'Show', user_path(user), class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
