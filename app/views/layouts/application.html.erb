<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/1f3e7f7321.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>

    <% if user_signed_in? %>
    <center>
      <tr>
        <td>
      <div class="search-bar">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :query, placeholder: "検索ワードを入力" %>
          <%= f.select :target, options_for_select([['User', 'User'], ['Book', 'Book']]) %>
          <%= f.select :match_type, options_for_select([['完全一致', 'exact'],['部分一致', 'partial']]) %>
          <%= f.submit '検索' %>
        <% end %>
      </div>
        </td>
      </tr>
    </center>
    <% end %>

    <main>
      <p id="notice"><%= notice %></p>
      <%= yield %>
    </main>

    <%= render 'layouts/footer' %>
  </body>
</html>
