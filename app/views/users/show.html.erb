<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>

      <!-- フォローボタンの追加 -->
      <div class="mt-3 btn-container">
        <% if current_user != @user %>
          <% if current_user.following?(@user) %>
            <%= button_to 'フォロー外す', user_relationship_path(@user, current_user.active_relationships.find_by(followed_id: @user.id)), method: :delete, class: 'btn btn-unfollow btn-info' %>
          <% else %>
            <%= button_to 'フォローする', user_relationships_path(@user), method: :post, class: 'btn btn-success' %>
          <% end %>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index', books: @user.books %> <!-- この部分が書籍を表示 -->
    </div>
  </div>
</div>
