<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'shared/error_messages', object: @book %>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <%= link_to 'グループを作成する', new_group_path, class: 'text-primary' %> |
      <%= link_to 'グループ一覧', groups_path, class: 'text-primary' %>
      <%= render 'index', users: @users %>
    </div>
  </div>
</div>
